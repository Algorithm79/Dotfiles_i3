!----------------
!  URxvt settings
!----------------

URxvt.depth:                32
URxvt.geometry:             120x30
!URxvt.transparent:          true
URxvt.fading:               0
!URxvt.shading: 		    30
! URxvt.urgentOnBell:         true
! URxvt.visualBell:           true
URxvt.loginShell:           true
URxvt.saveLines:            1000
URxvt.internalBorder:       3
URxvt.lineSpace:            0
URxvt.background: rgba:2f00/3400/3f00/c800

! Appearance
!URxvt.font: xft:Inconsolata Nerd Font Mono:size=15, xft:DejaVu Sans:size=12
URxvt.font: xft:Iosevka:size=10
URxvt.boldFont: xft:Iosevka:size=10

URxvt*letterSpace: 1

!----------------
!  Xft Settings
!----------------

Xft*dpi: 96
Xft*antialias:  true
Xft*hinting:    true
Xft*rgba:       rgb
Xft*autohint:   true
Xft*hintstyle:  hintfull
Xft*lcdfilter:  lcddefault

! Scrollbar
URxvt.scrollStyle:          rxvt
URxvt.scrollBar:            false

! Perl extensions
URxvt.perl-ext-common:      default,matcher
URxvt.matcher.button:       1
URxvt.urlLauncher:          chromium

! Cursor
URxvt.cursorBlink:          true
URxvt.cursorColor:          #f3f3f5
URxvt.cursorUnderline:      false

! Pointer
URxvt.pointerBlank:         true

! special
*.foreground:   #ffffff
*.background:   #2f343f
!*.cursorColor:  #676E7D

! black
*.color0:       #0c0d0e
*.color8:       #737475

! red
*.color1:       #a54242
*.color9:       #a54242

! green
*.color2:       #31a354
*.color10:      #31a354

! yellow
*.color3:       #dca060
*.color11:      #dca060

! blue
*.color4:       #5294e2
*.color12:      #5294e2

! magenta
*.color5:       #4084d6
*.color13:      #4084d6

! cyan
*.color6:       #087ba2
*.color14:      #087ba2

! white
*.color7:       #f3f3f5
*.color15:      #f3f3f5

!----------------
!  Xft Settings
!----------------

!! Transparency (0-255):
*.alpha: 210
!! Set a default font and font size as below:
*.font: Iosevka-14;

!------------------------------
!  Betterlooking fonts for MWM
!------------------------------

*.renderTable: variable
*.renderTable.variable.fontName: Sans
*.renderTable.variable.fontSize: 8
*.renderTable.variable.fontType: FONT_IS_XFT

!------------------------------
!  Motif settings
!------------------------------
 
!Mwm*title*fontList: "-adobe-helvetica-medium-r-normal--14-*-*-*-*-*-*-*"
!Mwm*menu*fontList: "-adobe-helvetica-medium-r-normal--12-*-*-*-*-*-*-*"
!Mwm*fontList: "-adobe-helvetica-medium-r-normal--12-*-*-*-*-*-*-*"

!Mwm*title*fontList: "-misc-dejavu serif-bold-r-normal--14-*-*-*-*-*-*-*"
!Mwm*menu*fontList: "-misc-dejavu serif-medium-r-normal--12-*-*-*-*-*-*-*"
!Mwm*fontList: "-misc-dejavu serif-medium-r-normal--12-*-*-*-*-*-*-*"

Mwm*feedback*fontList: -b&h-lucida-medium-r-*-*-14-*-*-*-*-*-*-*
Mwm*icon*fontList: -b&h-lucida-medium-r-*-*-12-*-*-*-*-*-*-*
Mwm*menu*fontList: -b&h-lucida-medium-r-*-*-14-*-*-*-*-*-*-*
Mwm*title*fontList: -b&h-lucida-medium-r-*-*-14-*-*-*-*-*-*-*

Mwm*moveOpaque:                 true
Mwm*iconClick:                  false
Mwm*iconPlacement:              left top tight
Mwm*iconPlacementMargin:        10
Mwm*iconDecoration:             label image
 
Mwm*iconImageMaximum:           48x48
 
Mwm*client*activeBackground:    #676E7D
Mwm*client*background:          #2f343f
 
Mwm*icon*activeBackground:      #676E7D
Mwm*icon*background:            #2f343f
 
Mwm*feedback*background:        #676E7D
 
Mwm*background:                 #676E7D
 
Mwm*frameStyle:                 slab
Mwm*moveThreshold:              1
 
!---------------------------------
!  Application-specific resources
!---------------------------------

!!! XClock resources:
 
Mwm*XClock.clientDecoration:    border
 
XClock*foreground:              #676E7D
XClock*background:              #2f343f
XClock*render:                  true
XClock*geometry:                85x85-10+10
XClock.Clock.minorColor:        #5294e2
XClock.Clock.hourColor:         #676E7D
XClock.Clock.minuteColor:       #676E7D

!!! XTerm resources:
 
XTerm*loginShell:               true
XTerm*metaSendsEscape:          true
XTerm*faceName:                 Iosevka-10:antialias=on
XTerm*geometry: 110x25
 
XTerm*foreground:               #ffffff
XTerm*background:               #2f343f
 
XTerm*allowBoldFonts:           false
XTerm*scrollBar:                false
