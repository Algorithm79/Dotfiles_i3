configuration {
  location: 0;
  xoffset: 0;
  yoffset: -300;
  lines: 6;
  fixed-num-lines: false;
  display-run: "";
  display-drun: "";
  display-window: "";
  display-windowcd: "";
  show-icons: true;
  icon-theme: "Arc";
}

* {
  transparency: "real";
  background-color: #2f343f90;
  window-border: #676E7D;
  foreground: #eeeeee;
  normal-foreground: @foreground;
  alternate-normal-foreground: @normal-foreground;
  selected-normal-foreground: @foreground;
  active-foreground: @normal-foreground;
  alternate-active-foreground: @active-foreground;
  selected-active-foreground: @selected-normal-foreground;
  urgent-foreground: @foreground;
  alternate-urgent-foreground: @urgent-foreground;
  selected-urgent-foreground: @urgent-foreground;
  background: transparent;
  normal-background: @background;
  alternate-normal-background: @normal-background;
  selected-normal-background: #5294e290;
  active-background: @normal-background;
  alternate-active-background: @background;
  selected-active-background: @selected-normal-background;
  urgent-background: @background;
  alternate-urgent-background: @urgent-background;
  selected-urgent-background: @selected-normal-background;
  spacing: 0;
}

#window {
  font: "Iosevka 12";
  border: 1px;
  border-color: @window-border;
  width: 800px;
  height: 600px;
  children: [listview,inputbar];
}

#listview {
  reverse: false;
}

#message {
  margin: 0px 6px;
  padding: 6px 0px;
}

#textbox {
  text-color: @foreground;
}

#element {
  padding: 4px 9px 4px 9px;
}
#element.normal.normal {
  background-color: @normal-background;
  text-color: @normal-foreground;
}
#element.normal.urgent {
  background-color: @urgent-background;
  text-color: @urgent-foreground;
}
#element.normal.active {
  background-color: @active-background;
  text-color: @active-foreground;
}
#element.selected.normal {
  background-color: @selected-normal-background;
  text-color: @selected-normal-foreground;
}
#element.selected.urgent {
  background-color: @selected-urgent-background;
  text-color: @selected-urgent-foreground;
}
#element.selected.active {
  background-color: @selected-active-background;
  text-color: @selected-active-foreground;
}
#element.alternate.normal {
  background-color: @alternate-normal-background;
  text-color: @alternate-normal-foreground;
}
#element.alternate.urgent {
  background-color: @alternate-urgent-background;
  text-color: @alternate-urgent-foreground;
}
#element.alternate.active {
  background-color: @alternate-active-background;
  text-color: @alternate-active-foreground;
}

#button {
  background-color: @background;
  text-color: @foreground;
}
#button.selected {
  background-color: @selected-normal-background;
  text-color: @selected-normal-foreground;
}

#inputbar {
  margin: 0px;
  padding: 5px 2px 5px 2px;
  background-color: @foreground;
  children: [prompt,textbox-prompt,entry];
}

#entry {
  text-color: #111111;
  background-color: @foreground;
}

#prompt {
  padding: 0px 0px 0px 0px;
  text-color: #111111;
  background-color: @foreground;
}

#textbox-prompt {
  str: "";
  expand: false;
  text-color: #111111;
  background-color: @foreground;
}
