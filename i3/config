# volume control
bindsym XF86AudioRaiseVolume exec amixer -D pulse sset Master 5%+ && $HOME/.config/dunst/volume.sh up
bindsym XF86AudioLowerVolume exec amixer -D pulse sset Master 5%- && $HOME/.config/dunst/volume.sh down

# granular volume control
bindsym $mod+XF86AudioRaiseVolume exec amixer -D pulse sset Master 1%+ && $HOME/.config/dunst/volume.sh up 
bindsym $mod+XF86AudioLowerVolume exec amixer -D pulse sset Master 1%- && $HOME/.config/dunst/volume.sh down

# mute
bindsym XF86AudioMute exec amixer sset Master toggle 

# media player controls
bindsym XF86AudioPlay exec mpc toggle
bindsym XF86AudioPause exec mpc pause
bindsym XF86AudioNext exec mpc next
bindsym XF86AudioPrev exec mpc prev

# screenshot
bindsym Print exec scrot $HOME/Bilder/Screenshots/`date +%Y-%m-%d_%H:%M:%S`.png && notify-send "Screenshot" "Screenshot Captured"

